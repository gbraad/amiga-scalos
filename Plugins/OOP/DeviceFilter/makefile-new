# $Date$
# $Revision$
##############################################################################

ifndef TOPLEVEL
	TOPLEVEL=$(shell pwd)/../../..
endif

##############################################################################

include		config.mk

##############################################################################
#
# Project Object files
#

OBJS	=	$(BEGIN_OBJS) \
		$(OBJDIR)/devicefilter.o \
		$(END_OBJS) \
#

##############################################################################
#
# Targets
#

DEVICEFILTER	=	devicefilter.plugin

##############################################################################

.PHONY: all install clean bump dump

all:	$(DEVICEFILTER)

##############################################################################

$(DEVICEFILTER): $(OBJS)
	@$(ECHO) "Link $@"
	@$(CC) $(OBJS) $(LFLAGS) $(DEFINES) -o$@.debug
	@$(STRIP) $@.debug -o $@

##############################################################################

install:
	-@$(ECHO) "Installing $(DEVICEFILTER)"
	copy $(DEVICEFILTER) Scalos:Plugins/OOP clone


clean:
	-$(RM) -frv $(OBJDIR)/*.o $(OBJDIR)/*.d $(OBJDIR)/*.d.* \
        	$(OBJDIR)/*.i $(OBJDIR)/*.s \
		$(DEVICEFILTER).debug $(DEVICEFILTER)

##############################################################################
#
# Autodependencies
#

-include $(OBJS:.o=.d)
