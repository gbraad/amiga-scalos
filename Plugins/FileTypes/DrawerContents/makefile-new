# $Date$
# §Revision:                 $
##############################################################################

ifndef TOPLEVEL
	TOPLEVEL=$(shell pwd)/../../..
endif

##############################################################################

include		config.mk

##############################################################################
#
# Project Object files
#

OBJS	=       $(BEGIN_OBJS) \
		$(OBJDIR)/DrawerContents.o \
		$(END_OBJS)

##############################################################################
#
# Targets
#

DRAWERCONTENTS	=	drawercontents.plugin

##############################################################################
#
# Catalogs
#

CATS		= \
		 deutsch \
	         français \

##############################################################################
#
# Subdirs
#

SUBDIRS		= $(foreach cat,$(CATS),Catalogs/$(cat)/Scalos)
##############################################################################

.PHONY: all install clean bump dump nodebug

all:	$(DRAWERCONTENTS) \
		all_subdirs

##############################################################################

$(OBJDIR)/%.o: $(FONTSAMPLE_DIR)/%.c
	@$(run-cc)

DrawerContents.c : DrawerContents_locale.h

DrawerContents_locale.h : DrawerContentsPlugin.cd
	$(ECHO) "CatComp $@"
	catcomp $(subst ../,/,$<) cfile=$@

##############################################################################

$(DRAWERCONTENTS): $(OBJS)
	@$(ECHO) "Link $@"
	@$(CC) $(OBJS) $(LFLAGS) $(DEFINES) -o$@.debug
	@$(STRIP) $@.debug -o $@
	@protect $(DRAWERCONTENTS) +e

##############################################################################

install:
	-@$(ECHO) "Installing $(DRAWERCONTENTS)"
	@copy $(DRAWERCONTENTS) Scalos:Plugins/FileTypes/ clone
	@avail flush

install: install_subdirs

clean:
	-@$(RM) -frv $(OBJDIR)/*.o $(OBJDIR)/*.d $(OBJDIR)/*.d.* \
        	$(OBJDIR)/*.i $(OBJDIR)/*.s \
		$(DRAWERCONTENTS) $(DRAWERCONTENTS).debug *.dump *_str.* DrawerContents_locale.h

clean:  clean_subdirs

##############################################################################
#
# Autodependencies
#

-include $(OBJS:.o=.d)
