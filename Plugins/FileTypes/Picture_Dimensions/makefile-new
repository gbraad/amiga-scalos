# $Date$
# $Revision$
##############################################################################

ifndef TOPLEVEL
	TOPLEVEL=$(shell pwd)/../../..
endif

##############################################################################

include		config.mk

##############################################################################
#
# Project Object files
#

OBJS	=       $(BEGIN_OBJS) \
		$(OBJDIR)/PictureDimensions.o \
		$(END_OBJS)

##############################################################################
#
# Autodependencies
#
ifneq ($(MAKECMDGOALS),clean)
	-include $(OBJS:.o=.d)
endif

##############################################################################
#
# Targets
#
NAME  	= 	picturedimensions.plugin
NAME_DB	=	$(NAME).debug

##############################################################################
#
# Catalogs
#

CATS		= \
		 deutsch \
	         français \

##############################################################################
#
# Subdirs
#

SUBDIRS		= $(foreach cat,$(CATS),Catalogs/$(cat)/Scalos)
##############################################################################

.PHONY: all install clean bump dump nodebug

all:	$(BINDIR)/$(NAME) \
	$(BINDIR)/$(NAME_DB) \
	all_subdirs

##############################################################################

PictureDimensions.c : PictureDimensions_locale.h

PictureDimensions_locale.h : PictureDimensionsPlugin.cd
	$(ECHO) "CatComp $@"
	catcomp $(subst ../,/,$<) cfile=$@

##############################################################################

$(BINDIR)/$(NAME) $(BINDIR)/$(NAME_DB) : $(OBJS)
	$(ECHO) "Link $(NAME)"
	@$(CC) $(OBJS) $(LFLAGS) $(DEFINES) -o$(BINDIR)/$(NAME_DB)
	@$(STRIP) $(BINDIR)/$(NAME_DB) -o $(BINDIR)/$(NAME)
	@protect $@ +e

##############################################################################

install:
	-@$(ECHO) "Installing $(NAME)"
	@copy $(BINDIR)/$(NAME) Scalos:Plugins/FileTypes/ clone
	@avail flush

install: install_subdirs

clean:
	-@$(RM) -frv $(OBJDIR)/*.o $(OBJDIR)/*.d $(OBJDIR)/*.d.* \
        	$(OBJDIR)/*.i $(OBJDIR)/*.s \
		$(BINDIR)/$(NAME) $(BINDIR)/$(NAME_DB) \
		*.dump *_str.* \
		PictureDimensions_locale.h \

clean:  clean_subdirs

##############################################################################


