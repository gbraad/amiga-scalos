# $Date$
# §Revision:                 $
##############################################################################

ifndef TOPLEVEL
	TOPLEVEL=$(shell pwd)/../../..
endif

##############################################################################

include		config.mk

##############################################################################
#
# Project Object files
#

OBJS	=      	$(BEGIN_OBJS) \
		$(OBJDIR)/PalettePrefs.o \
		$(OBJDIR)/DataTypesMCC.o \
		$(END_OBJS)

##############################################################################
#
# Autodependencies
#
ifneq ($(MAKECMDGOALS),clean)
	-include $(OBJS:.o=.d)
endif

##############################################################################
#
# Targets
#

PALETTEPREFS	=	Palette.prefsplugin

##############################################################################

PREFSDIR	=	../../../Prefs/Palette

##############################################################################
#
# Some lame deps

$(OBJDIR)/%.o: $(DATATYPESMCC_DIR)/%.c
	@$(run-cc)

##############################################################################

.PHONY: all install clean bump dump nodebug

all:	$(PALETTEPREFS)

#############################################################

PalettePrefs.c : ScalosPalette_locale.h

ScalosPalette_locale.h : $(PREFSDIR)/ScalosPalette.cd
	@$(ECHO) "CatComp $@"
	@catcomp $(subst ../,/,$<) cfile=$@

##############################################################################

$(PALETTEPREFS): $(OBJS)
	@$(ECHO) "Link $@"
	@$(CC) $(OBJS) $(LFLAGS) $(DEFINES) -o$@.debug
	@$(STRIP) $@.debug -o $@
	@protect $@ +e

##############################################################################

install:
	-@$(ECHO) "Installing $(PALETTEPREFS)"
	@copy $(PALETTEPREFS) Scalos:Prefs/ clone
	@avail flush

clean:
	-@$(RM) -frv $(OBJDIR)/*.o $(OBJDIR)/*.d $(OBJDIR)/*.d.* \
        	$(OBJDIR)/*.i $(OBJDIR)/*.s \
		$(PALETTEPREFS) $(PALETTEPREFS).debug *.dump *_str.* ScalosPalette_locale.h

