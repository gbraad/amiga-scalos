# ECX makefile for MorphOS opendrawer cli tool
# $Date: $
# $Revision: $
# $Id: $
#############################################################

CC      	= ECX:bin/ECX

CFLAGS  	= POWERPC MORPHOS VAR LINE SYM ICA

OPTFLAGS  	= EXENAME

#############################################################

NAME		= CreateTrash.module.mos

#############################################################

SRC  		= CreateTrash.module.e

#############################################################

DESTTOOL	= Scalos:Tools/

#############################################################

All: 	$(NAME)

#############################################################

$(NAME):
	@printf '\033[32mCompile: \033[31m\033[1m$@\033[0m\n'
	@$(CC) $(SRC) $(CFLAGS) $(OPTFLAGS) $@

#############################################################

# A little something to clean it all up
clean:
	@printf '\033[32mDelete: \033[31m\033[1m'
	@delete $(NAME)
	@printf '\033[0m'

#############################################################

# copy all generated file to their final destinations
install:
	@printf '\033[32mInstall: \033[31m\033[1m$(DESTTOOL)$(NAME)\033[0m\n'
	@copy $(NAME) $(DESTTOOL) clone

