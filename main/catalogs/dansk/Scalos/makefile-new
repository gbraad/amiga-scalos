# makefile for Scalos main (translated Texts : dansk)
# $Date$

.SUFFIXES: .ct .catalog
.PHONY: all install clean

include config.mk

CATNAME	=	Scalos


all:	$(CATNAME).catalog

.ct.catalog :
	@printf '\033[32mMake catalog: \033[31m\033[1m$(LANG)\033[0m\n'
	CatComp ///$*.cd $*.ct CATALOG $*.catalog VB=2
	avail flush

$(CATNAME).catalog : $(CATNAME).ct ../../../$(CATNAME).cd

clean:
	-delete $(CATNAME).catalog

install:
	-@mkdir -p Locale:catalogs/$(LANG)/Scalos
	-copy $(CATNAME).catalog Locale:catalogs/$(LANG)/Scalos/ clone

nodebug:

