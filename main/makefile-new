##############################################################################
#
# Autodependencies
#
ifneq ($(MAKECMDGOALS),clean)
	-include $(OBJS:.o=.d)
endif

##############################################################################
#
# Some lame deps
#

$(OBJDIR)/%.o: $(MCPGFX_DIR)/%.c
	@$(run-cc)

about.c Scalos.c windowtask.c locale.h : $(OBJDIR)/Scalos_Locale.h
filetypes.c : MsgIdNames.h

$(OBJDIR)/Scalos_Locale.h : Scalos.cd
	@printf 'Compile CatComp header from $<\n'
	@catcomp vb=1 $< cfile=$@

MsgIdNames.h : $(OBJDIR)/Scalos_Locale.h
	@printf 'Generate $<\n'
	@$(GENMSGIDNAMES) $(OBJDIR)/Scalos_Locale.h MsgIdNames.h

$(OBJDIR)/ScalosVersion.o : FORCE

FORCE:

##############################################################################
#
# Target
#

NAME	=	Scalos
NAME_DB =	Scalos.debug

##############################################################################
# 
# Subdirs
#

SUBDIRS	=	Tools				\
		$(foreach cat,$(CATS),Catalogs/$(cat)/Scalos) \
#		std_includes/sfd		\

##############################################################################

.PHONY: all install clean bump dump nodebug

all:	$(NAME) \
	$(NAME_DB) \
	all_subdirs \

##############################################################################

$(NAME) $(NAME_DB) : $(OBJS)
	@$(ECHO) "Link $(NAME)"
	@$(CC) $(STARTUP) $(OBJS) $(LFLAGS) $(DEFINES) -o $(NAME_DB)
	@$(STRIP) $(NAME_DB) -o $(NAME)
	@protect $(NAME) +e

##############################################################################
# 
# Catalogs
#

CATS	= 	dansk \
	  	deutsch \
	  	español \
	  	français \
	  	Polski \
	  	ÃeÓtina

##############################################################################

nodebug: nodebug_subdirs

install: install_subdirs

install:
	-@$(ECHO) "Installing $(NAME)"
	@copy $(NAME) Scalos: clone

clean:  clean_subdirs

clean:
	@$(RM) -frv $(OBJDIR)/*.o $(OBJDIR)/*.d  $(OBJDIR)/*.d.* \
        	$(OBJDIR)/*.i \
        	$(OBJDIR)/*.s $(OBJDIR)/*.d.* \
		$(NAME) $(NAME_DB) *.dump *_str.* \
		$(OBJDIR)/Scalos_Locale.h MsgIdNames.h


