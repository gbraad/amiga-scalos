# $Date$
# $Revision$
##############################################################################

TOPLEVEL	=	$(shell pwd)/../..

include		config.mk

##############################################################################
#
# Project Object files
#

OBJS	=      	$(OBJDIR)/Empty_Trashcan.o \

##############################################################################
#
# Autodependencies
#
ifneq ($(MAKECMDGOALS),clean)
	-include $(OBJS:.o=.d)
endif

##############################################################################
#
# Subdirs
#

SUBDIRS	=	Catalogs/deutsch/Scalos		\
		Catalogs/français/Scalos

##############################################################################
#
# Targets
#

NAME 	=       Empty_Trashcan.module
NAME_DB	=	$(NAME).debug

##############################################################################

.PHONY: all install clean bump dump nodebug

all:	$(BINDIR)/$(NAME) \
	$(BINDIR)/$(NAME_DB) \
	all_subdirs

##############################################################################

$(OBJDIR)/%.o: $(TOOLTYPE_DIR)/%.c
	@$(run-cc)

$(OBJDIR)/%.o: $(ICONOBJMCC_DIR)/%.c
	@$(run-cc)

Empty_Trashcan.c : Empty_Trashcan_Locale.h

Empty_Trashcan_Locale.h : Empty_Trashcan.cd
	@$(ECHO) "CatComp $@"
	@catcomp $(subst ../,/,$<) cfile=$@

##############################################################################

$(BINDIR)/$(NAME) $(BINDIR)/$(NAME_DB) : $(OBJS)
	$(ECHO) "Link $(NAME)"
	@$(CC) $(OBJS) $(LFLAGS) $(DEFINES) -o$(BINDIR)/$(NAME_DB)
	@$(STRIP) $(BINDIR)/$(NAME_DB) -o $(BINDIR)/$(NAME)
ifneq ($(MACHINE), ppc-amigaos)
	-@protect $@ +e
endif

##############################################################################

install:
	-@$(ECHO) "Installing $(NAME)"
	@copy $(BINDIR)/$(NAME) Scalos:modules/ clone

install: install_subdirs

clean:
	-@$(RM) -frv $(OBJDIR)/*.o $(OBJDIR)/*.d $(OBJDIR)/*.d.* \
        	$(OBJDIR)/*.i $(OBJDIR)/*.s \
		$(BINDIR)/$(NAME) $(BINDIR)/$(NAME_DB) \
		*.dump *_str.* \
		Empty_Trashcan_Locale.h

clean:	clean_subdirs

##############################################################################

