# $Date$
# $Revision$
#############################################################
TOPLEVEL	=	$(shell pwd)/../..

include		config.mk

##############################################################################
#
# Project Object files
#

OBJS	=      	$(OBJDIR)/Information.o \
		$(OBJDIR)/IconobjectMCC.o \
		$(OBJDIR)/ToolTypes.o \
		$(OBJDIR)/int64.o \
		$(OBJDIR)/FsAbstraction.o \

##############################################################################
#
# Autodependencies
#
ifneq ($(MAKECMDGOALS),clean)
	-include $(OBJS:.o=.d)
endif

##############################################################################
#
# Subdirs
#

SUBDIRS	=	Catalogs/deutsch/Scalos		\
		Catalogs/français/Scalos

##############################################################################
#
# Targets
#

NAME  	=       Information.module
NAME_DB	=	$(NAME).debug

##############################################################################

.PHONY: all install clean bump dump nodebug

all:	$(BINDIR)/$(NAME) \
	$(BINDIR)/$(NAME_DB) \
	all_subdirs

##############################################################################

Information.c : Information_Locale.h

Information_Locale.h : Information.cd
	@$(ECHO) "CatComp $@"
	@catcomp $(subst ../,/,$<) cfile=$@

##############################################################################

$(BINDIR)/$(NAME) $(BINDIR)/$(NAME_DB) : $(OBJS)
	$(ECHO) "Link $(NAME)"
	@$(CC) $(OBJS) $(LFLAGS) $(DEFINES) -o$(BINDIR)/$(NAME_DB)
	@$(STRIP) $(BINDIR)/$(NAME_DB) -o $(BINDIR)/$(NAME)
ifneq ($(MACHINE), ppc-amigaos)
	-@protect $@ +e
endif

##############################################################################

install: install_subdirs

install:
	-@$(ECHO) "Installing $(NAME)"
	@copy $(BINDIR)/$(NAME) Scalos:modules/ clone

clean:	clean_subdirs

clean:
	-@$(RM) -frv $(OBJDIR)/*.o $(OBJDIR)/*.d $(OBJDIR)/*.d.* \
        	$(OBJDIR)/*.i $(OBJDIR)/*.s \
		$(BINDIR)/$(NAME) $(BINDIR)/$(NAME_DB) \
		*.dump *_str.* \
		Information_Locale.h

##############################################################################

