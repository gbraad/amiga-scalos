# $Date$
# §Revision:                 $
##############################################################################

ifndef TOPLEVEL
	TOPLEVEL=$(shell pwd)/../..
endif

##############################################################################

include		config.mk

##############################################################################
#
# Project Object files
#

OBJS	=       	$(OBJDIR)/Menu.o


##############################################################################
#
# Autodependencies
#
ifneq ($(MAKECMDGOALS),clean)
	-include $(OBJS:.o=.d)
endif

##############################################################################
# 
# Catalogs
#

CATS		= dansk \
		  deutsch \
		  español \
		  français \
		  italiano \
		  svenska \
		  ÃeÓtina

##############################################################################
# 
# Subdirs
#

SUBDIRS =	$(foreach cat,$(CATS),Catalogs/$(cat)/Scalos)

##############################################################################
#
# Some lame deps

$(OBJDIR)/Menu.o $(OBJDIR)/Menu.d : ScalosMenu_locale.h

ScalosMenu_locale.h : ScalosMenu.cd
	@$(ECHO) "CatComp $@"
	@catcomp $< cfile=$@

##############################################################################
#
# Targets
#

NAME	=	Scalos_Menu
NAME_DB	=	$(NAME).debug

##############################################################################

.PHONY: all install clean bump dump

all:    $(BINDIR)/$(NAME) \
	$(BINDIR)/$(NAME_DB) \
	all_subdirs

##############################################################################

$(BINDIR)/$(NAME) $(BINDIR)/$(NAME_DB) : $(OBJS)
	$(ECHO) "Link $(NAME)"
	@$(CC) $(OBJS) $(LFLAGS) $(DEFINES) -o$(BINDIR)/$(NAME_DB)
	@$(STRIP) $(BINDIR)/$(NAME_DB) -o $(BINDIR)/$(NAME)
	@protect $@ +e

##############################################################################

install: 
	-@$(ECHO) "Installing $(NAME)"
	@copy $(BINDIR)/$(NAME) "Scalos:Prefs/Scalos Menu" clone

install: install_subdirs


clean:
	-@$(RM) -frv $(OBJDIR)/*.o $(OBJDIR)/*.d $(OBJDIR)/*.d.* \
        	$(OBJDIR)/*.i $(OBJDIR)/*.s \
		$(BINDIR)/$(NAME) $(BINDIR)/$(NAME_DB) \
		*.dump *_str.* \
		ScalosMenu_locale.h

clean:  clean_subdirs

##############################################################################


