# $Date$
# §Revision:                 $
##############################################################################

ifndef TOPLEVEL
	TOPLEVEL=$(shell pwd)/../..
endif

##############################################################################

include		config.mk

##############################################################################
#
# Project Object files
#

OBJS	=       	$(OBJDIR)/Menu.o


##############################################################################
#
# Autodependencies
#
ifneq ($(MAKECMDGOALS),clean)
	-include $(OBJS:.o=.d)
endif

##############################################################################
# 
# Catalogs
#

CATS		= dansk \
		  deutsch \
		  español \
		  français \
		  italiano \
		  svenska \
		  ÃeÓtina

##############################################################################
# 
# Subdirs
#

SUBDIRS =	$(foreach cat,$(CATS),Catalogs/$(cat)/Scalos)

##############################################################################
#
# Some lame deps

$(OBJDIR)/Menu.o : ScalosMenu_locale.h

ScalosMenu_locale.h : ScalosMenu.cd
	@$(ECHO) "CatComp $@"
	@catcomp $< cfile=$@

##############################################################################
#
# Targets
#

NAME	=	Scalos_Menu

##############################################################################

.PHONY: all install clean bump dump

all:	$(NAME) \
	all_subdirs

##############################################################################

$(NAME): $(OBJS)
	@$(ECHO) "Link $(NAME)"
	@$(CC) $(STARTUP) $(OBJS) $(CFLAGS) $(LFLAGS) $(DEFINES) -o$(NAME).debug
	@$(STRIP) $(NAME).debug -o $(NAME)
	@protect $(NAME) +e

##############################################################################

install: 
	-@$(ECHO) "Installing $(NAME)"
	@copy $(NAME) "Scalos:Prefs/Scalos Menu" clone

install: install_subdirs


clean:
	-@$(RM) -frv $(OBJDIR)/*.o $(OBJDIR)/*.d $(OBJDIR)/*.i \
        	$(OBJDIR)/*.d.* $(OBJDIR)/*.s \
		$(NAME) $(NAME).debug *.dump *_str.* \
		ScalosMenu_locale.h

clean:  clean_subdirs

