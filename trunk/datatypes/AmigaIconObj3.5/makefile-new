ifndef TOPLEVEL
	TOPLEVEL=$(shell pwd)/../..
endif

##############################################################################

include		config.mk

##############################################################################
#
# Project Object files
#

ifeq ($(MACHINE), ppc-amigaos)
OBJS	=       $(OBJDIR)/AmigaIconObj35-aos4.o $(OBJDIR)/AmigaIconObj35.o
else
OBJS	=       $(OBJDIR)/AmigaIconObj35-classic.o $(OBJDIR)/AmigaIconObj35.o
endif

##############################################################################
#
# Autodependencies
#
ifneq ($(MAKECMDGOALS),clean)
	-include $(OBJS:.o=.d)
endif

##############################################################################
#
# Targets
#

NAME	=	amigaiconobj35.datatype
NAME_DB	=	amigaiconobj35.datatype.debug

##############################################################################

.PHONY: all install clean bump dump

all:	$(NAME) \
	$(NAME_DB)
	
##############################################################################

$(NAME): $(OBJS)
	@$(ECHO) "Link $(NAME)"
	@$(CC) $(OBJS) $(LFLAGS) $(DEFINES) -o$(NAME_DB)
	@$(STRIP) $(NAME_DB) -o $(NAME)
	@protect $(NAME) +e

##############################################################################

install:
	-@$(ECHO) "Installing $(NAME)"
	@copy $(NAME) sys:classes/datatypes
	@avail flush


clean:
	-@$(RM) -frv $(OBJDIR)/*.o $(OBJDIR)/*.d $(OBJDIR)/*.d.* \
        	$(OBJDIR)/*.i $(OBJDIR)/*.s \
		$(NAME) $(NAME_DB) *.dump *_str.*

##############################################################################
