# $Date$
# §Revision:                 $
##############################################################################

ifndef TOPLEVEL
	TOPLEVEL=$(shell pwd)/../../..
endif

##############################################################################

include		config.mk

##############################################################################
#
# Project Object files
#

OBJS	=      	$(BEGIN_OBJS) \
		$(OBJDIR)/PatternPrefs.o \
		$(OBJDIR)/Backfill.o \
                $(OBJDIR)/BitMapMCC.o \
                $(OBJDIR)/DataTypesMCC.o \
		$(OBJDIR)/DoLoadDT.o \
		$(END_OBJS)

##############################################################################
#
# Targets
#

PATTERNPREFS	=	Pattern.prefsplugin

##############################################################################

PREFSDIR	=	../../../Prefs/Pattern

##############################################################################

.PHONY: all install clean bump dump nodebug

all:	$(PATTERNPREFS)

##############################################################################

PatternPrefs.c : ScalosPattern_locale.h

ScalosPattern_locale.h : $(PREFSDIR)/ScalosPattern.cd
	@$(ECHO) "CatComp $@"
	@catcomp $(subst ../,/,$<) cfile=$@

##############################################################################

$(PATTERNPREFS): $(OBJS)
	@$(ECHO) "Link $@"
	@$(CC) $(OBJS) $(LFLAGS) $(DEFINES) -o$@.debug
	@$(STRIP) $@.debug -o $@
	@protect $@ +e

##############################################################################

install:
	-@$(ECHO) "Installing $(PATTERNPREFS)"
	@copy $(PATTERNPREFS) Scalos:Prefs/ clone
	@avail flush


clean:
	-@$(RM) -frv $(OBJDIR)/*.o $(OBJDIR)/*.d $(OBJDIR)/*.d.* \
        	$(OBJDIR)/*.i $(OBJDIR)/*.s \
		$(NAME) $(NAME).debug *.dump *_str.* ScalosPattern_locale.h

##############################################################################
#
# Autodependencies
#

-include $(OBJS:.o=.d)
