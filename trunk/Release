/* -------------------------------------------------------------------------------- */

GetOsName: procedure

'version >' tmpfname
rc = open( 'tmpfile', tmpfname, 'R' )
versionstring = readln( 'tmpfile' )
rc = close( 'tmpfile' )
'delete ' || tmpfname || ' quiet'
if index(versionstring, "MorphOS") > 0 then
	do
	os = "MorphOS"
	end
else
	do
	versionstring =	strip(subword(versionstring, 2, 1), 'B', ',')
	if versionstring > 50 then
		os = "AmigaOS4"
	else
		os = "AmigaOS3"
	end

return os

END

/* -------------------------------------------------------------------------------- */
